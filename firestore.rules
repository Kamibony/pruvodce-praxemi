rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if user is authenticated and matches the student ID
    function isOwner(studentId) {
      return request.auth != null && request.auth.uid == studentId;
    }

    // Students Collection
    match /students/{studentId} {
      // Allow read/write only if the user is the owner
      allow read, write: if isOwner(studentId);

      // Logs Sub-collection
      match /logs/{logId} {
        // Read: Owner only
        allow read: if isOwner(studentId);

        // Create: Owner only, with data validation
        allow create: if isOwner(studentId)
                      && request.resource.data.hours > 0
                      && request.resource.data.activity.size() > 0;

        // Update/Delete: Owner only
        allow update, delete: if isOwner(studentId);
      }
    }

    // Public Collections (Schools, Content, FAQ)
    // These must be readable for the application to function
    match /schools/{schoolId} {
      allow read: if true;
    }

    match /content/{document=**} {
      allow read: if true;
    }

    match /faq/{document=**} {
      allow read: if true;
    }

    // System Settings (Knowledge Base)
    match /system_settings/{document=**} {
      allow read: if request.auth != null;
      // TODO: Restrict write to admins only when roles are implemented
      allow write: if request.auth != null;
    }
  }
}
